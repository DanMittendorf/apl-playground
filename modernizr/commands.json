{
  "type": "APL",
  "version": "1.3",
  "settings": {},
  "theme": "dark",
  "import": [
    {
      "name": "modernizr-commands-standard",
      "version": "1.0.0",
      "source": "https://www.alexandermartin.dev/modernizr/commands/standard-commands.json"
    },
    {
      "name": "modernizr-commands-media",
      "version": "1.0.0",
      "source": "https://www.alexandermartin.dev/modernizr/commands/media-commands.json"
    }
  ],
  "resources": [],
  "styles": {},
  "onMount": [],
  "graphics": {},
  "commands": {},
  "layouts": {
    "Commands": {
      "parameters": [],
      "item":           {
        "type": "Pager",
        "width": "100vw",
        "height": "100vh",
        "id": "commandsNavigation",
        "initialPage": 0,
        "navigation": "none",
        "items": [
          {
            "type": "CustomFrame",
            "headline": "Commands",
            "items": [
              {
                "type": "Option",
                "label": "User-defined Commands",
                "value": "${environment.aplVersion >= '1.1'}",
                "description": "You can define custom commands in your APL document or package."
              },
              {
                "type": "Separator"
              },
              {
                "type": "Link",
                "componentId": "commandsNavigation",
                "label": "Standard Commands",
                "page": 2
              },
              {
                "type": "Separator"
              },
              {
                "type": "Link",
                "componentId": "commandsNavigation",
                "label": "Media Commands",
                "page": 3
              }
            ]
          },
          {
            "type": "StandardCommands"
          },
          {
            "type": "MediaCommands"
          }
        ]
      }
    }
  }
}